# Vauntico SDK PyPI Configuration
# This file configures multi-repository publishing for vauntico-sdk

[distutils]
index-servers =
    pypi
    testpypi
    github

# Production PyPI repository
[pypi]
repository = https://upload.pypi.org/legacy/
username = __token__
password = ${PYPI_API_TOKEN}

# Test PyPI repository
[testpypi]
repository = https://test.pypi.org/legacy/
username = __token__
password = ${TEST_PYPI_API_TOKEN}

# GitHub Packages repository (for Python packages)
[github]
repository = https://maven.pkg.github.com/
username = __token__
password = ${GITHUB_TOKEN}

# Additional configuration options
[pypi]
repository = https://upload.pypi.org/legacy/
username = __token__
password = ${PYPI_API_TOKEN}
# Optional: Add these for enterprise setups
# client_cert = /path/to/client.crt
# client_key = /path/to/client.key

[testpypi]
repository = https://test.pypi.org/legacy/
username = __token__
password = ${TEST_PYPI_API_TOKEN}
# Test-specific configuration
# skip_existing = true

[github]
repository = https://maven.pkg.github.com/
username = __token__
password = ${GITHUB_TOKEN}
# GitHub-specific options
# disable_ssl_verification = false

# Shared configuration
[shared]
# Timeout settings
timeout = 300
retries = 3

# SSL configuration
ca_certs = 
verify_ssl = true

# Upload configuration
skip_existing = false
# For testpypi, you might want: skip_existing = true

