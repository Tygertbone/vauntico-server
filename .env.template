# =============================================================================
# VAUNTICO VPS DEPLOYMENT ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# --- Trust Score Backend + Vauntico Server ---
DATABASE_URL=postgresql://user:password@host:5432/dbname
JWT_SECRET=supersecretjwt_change_this_in_production
PAYSTACK_SECRET_KEY=paystack_secret_here
STRIPE_SECRET_KEY=stripe_secret_here
UPSTASH_REDIS_URL=redis://host:6379
SENDER_EMAIL=admin@vauntico.com
RESEND_API_KEY=resend_api_here
ANTHROPIC_API_KEY=anthropic_api_here

# --- Fulfillment Engine + Legacy Server ---
AIRTABLE_API_KEY=airtable_api_here
AIRTABLE_BASE_ID=base_id_here
AIRTABLE_TABLE_NAME=table_name_here
CLAUDE_API_KEY=claude_api_here

# --- Application Settings ---
NODE_ENV=production
LOG_LEVEL=info
DOMAIN=mydomain.com

# --- SSL Certificate Domains ---
# Replace mydomain.com with your actual domain
TRUST_SCORE_DOMAIN=trust-score.mydomain.com
VAUNTICO_SERVER_DOMAIN=vauntico-server.mydomain.com
FULFILLMENT_DOMAIN=fulfillment.mydomain.com
LEGACY_DOMAIN=legacy.mydomain.com

# --- SSL Email for Certbot ---
SSL_EMAIL=admin@mydomain.com

# --- Security Settings ---
BCRYPT_ROUNDS=12
SESSION_SECRET=session_secret_change_this_in_production
CORS_ORIGIN=https://mydomain.com

# --- Database Settings ---
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vauntico_db
DB_USER=vauntico_user
DB_PASSWORD=secure_password_change_this

# --- Redis Settings ---
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_change_this

# --- Monitoring & Logging ---
SENTRY_DSN=your_sentry_dsn_here
LOGTAIL_TOKEN=your_logtail_token_here
