# =============================================================================
# VAUNTICO ENVIRONMENT VARIABLES - COMPREHENSIVE EXAMPLE
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control
# Updated: 2026-01-07 - Environment Standardization

# =============================================================================
# MONETIZATION PHASE 1: FOUNDATION
# =============================================================================
MONETIZATION_PHASE=Phase 1: Foundation
FEATURE_DESCRIPTION=Foundation phase with payment processing and trust scoring
PHASE_TARGET_MRR=100000
PHASE_START_DATE=2026-01-01

# =============================================================================
# CORE APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=8080
FRONTEND_URL=http://localhost:3000
DOMAIN=localhost
LOG_LEVEL=info

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Primary Database (PostgreSQL)
DATABASE_URL=postgresql://vauntico_user:secure_password@localhost:5432/vauntico_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vauntico_db
DB_USER=vauntico_user
DB_PASSWORD=secure_password_change_this

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Configuration
JWT_SECRET=supersecretjwt_change_this_in_production
JWT_REFRESH_SECRET=jwt_refresh_secret_change_this_in_production

# Session Security
SESSION_SECRET=session_secret_change_this_in_production
BCRYPT_ROUNDS=12

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
OAUTH_ENCRYPTION_KEY=oauth_encryption_key_32_chars
OAUTH_ENCRYPTION_SALT=oauth_salt

# CRON Security
CRON_SECRET=cron_secret_change_this_in_production

# =============================================================================
# PAYMENT PROCESSING - STRIPE
# =============================================================================
STRIPE_ENABLED=true
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# Phase 1 Price IDs
STRIPE_CREATOR_PASS_PRICE_ID=price_creator_pass_monthly
STRIPE_ENTERPRISE_PRICE_ID=price_enterprise_monthly

# =============================================================================
# PAYMENT PROCESSING - PAYSTACK
# =============================================================================
PAYSTACK_SECRET_KEY=sk_live_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_live_your_paystack_public_key

# Phase 1 Plan Codes
PAYSTACK_CREATOR_PASS_PLAN_CODE=CREATOR_PASS_MONTHLY
PAYSTACK_ENTERPRISE_PLAN_CODE=ENTERPRISE_MONTHLY

# =============================================================================
# EMAIL SERVICE - RESEND
# =============================================================================
RESEND_API_KEY=re_your_resend_api_key
SENDER_EMAIL=noreply@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
UPSTASH_REDIS_URL=redis://your-redis-host:6379
UPSTASH_REDIS_REST_URL=https://your-redis-rest-url
UPSTASH_REDIS_REST_TOKEN=your_redis_rest_token
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_change_this

# =============================================================================
# AI SERVICES
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key
CLAUDE_API_KEY=your_claude_api_key

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# Airtable Integration
AIRTABLE_API_KEY=key_your_airtable_api_key
AIRTABLE_BASE_ID=app_your_airtable_base_id
AIRTABLE_TABLE_NAME=your_table_name

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Error Tracking
SENTRY_DSN=https://your-sentry-dsn
LOGTAIL_TOKEN=your_logtail_token

# Slack Alerting
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# SSL & DOMAIN CONFIGURATION
# =============================================================================
TRUST_SCORE_DOMAIN=trust-score.yourdomain.com
VAUNTICO_SERVER_DOMAIN=vauntico-server.yourdomain.com
FULFILLMENT_DOMAIN=fulfillment.yourdomain.com
LEGACY_DOMAIN=legacy.yourdomain.com
SSL_EMAIL=admin@yourdomain.com

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=https://yourdomain.com

# =============================================================================
# OCI CLOUD CONFIGURATION
# =============================================================================
INSTANCE_PRIVATE_IP=10.0.1.100
INSTANCE_PUBLIC_IP=your_public_ip

# =============================================================================
# ADMIN & EMERGENCY CONFIGURATION
# =============================================================================
ADMIN_ACCESS_KEY=admin_access_key_change_this
EMERGENCY_RECOVERY_MODE=false

# =============================================================================
# EMERGENCY REVENUE FEATURES (Phase 1)
# =============================================================================
ENABLE_PAYMENT_BRIDGE=true
ENABLE_VERIFICATION=true
ENABLE_CONTENT_RECOVERY=true
PAYMENT_BRIDGE_FEE_PERCENTAGE=10
VERIFICATION_BRAND_PRICE=99
CONTENT_RECOVERY_FEE_PERCENTAGE=30

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# CI/CD Backend URL
BACKEND_URL=http://localhost:3001

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=40
