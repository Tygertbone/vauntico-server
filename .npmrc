# Data-efficient npm configuration
# Optimized for minimal bandwidth usage and maximum caching

# Cache settings
cache=/tmp/.npm-cache

# Offline-first package management
prefer-offline=true

# Reduce network usage (using modern npm config)
audit=false
fund=false

# Minimal logging
loglevel=warn
progress=false

# Optimize for CI/CD
save=false
save-exact=false

# Registry configuration (if using private registry)
# registry=https://registry.npmjs.org/

# Authentication (if needed)
# //registry.npmjs.org/:_authToken=${NPM_TOKEN}

# Performance optimizations
maxsockets=50
strict-ssl=true
