{
  "name": "vauntico-trust-score-backend",
  "version": "2.0.0",
  "description": "Vauntico Trust Score backend - FREE stack (Neon + Upstash + Render)",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx -r dotenv/config src/server.ts dotenv_config_path=.env",
    "tsc:check": "tsc --noEmit",
    "migrate": "psql \"$DATABASE_URL\" -f migrations/001_create_schema.sql",
    "smoke-test:stripe-webhooks": "curl -X POST \"https://$DOMAIN/api/stripe/webhooks\" -H \"Content-Type: application/json\" -d '{}' --write-out \"Status: %{http_code}\n\" --silent --output /dev/null",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.9.1",
    "@sentry/node": "^8.24.0",
    "@upstash/redis": "^1.35.8",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "bullmq": "^4.13.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "pg": "^8.16.3",
    "resend": "^2.0.0",
    "stripe": "^20.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.9.0",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.9",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "tsx": "^4.1.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
