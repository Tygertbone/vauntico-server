# Vauntico SDK npm Configuration
# This file configures multi-registry publishing for @vauntico/sdk

# Primary registry - npm
registry=https://registry.npmjs.org/
//registry.npmjs.org/:_authToken=${NPM_TOKEN}

# GitHub Packages registry for scoped packages
@vauntico:registry=https://npm.pkg.github.com/
//npm.pkg.github.com/:_authToken=${GITHUB_TOKEN}

# Always-auth for private registries
always-auth=true

# Configure authentication for different registries
; begin auth token
//registry.npmjs.org/:_authToken=${NPM_TOKEN}
//npm.pkg.github.com/:_authToken=${GITHUB_TOKEN}
; end auth token

# Publishing configuration
access=public
@vauntico:access=public

# Caching configuration
cache=/tmp/npm-cache

# Audit configuration
audit-level=moderate
audit-force=false

# Proxy configuration (if needed)
# proxy=http://proxy.company.com:8080
# https-proxy=http://proxy.company.com:8080

# SSL configuration
strict-ssl=true
ca=null

# Network configuration
maxsockets=50
network-timeout=60000

# Metadata configuration
save-exact=true
save-prefix="^"

# Logging configuration
loglevel=info
progress=true

# Package publishing
publishConfig.registry=https://registry.npmjs.org/
publishConfig.access=public

# GitHub Packages specific configuration
@vauntico:registry=https://npm.pkg.github.com/
@vauntico:always-auth=true

# Registry selection based on environment
# Production: npm
# Staging/Testing: GitHub Packages
