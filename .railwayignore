  - vauntico-vault-landing/
  
  # Root config files
  - package.json
  - package-lock.json
  - tsconfig.json
  - .eslintrc.json
  - .stylelintrc.json
  - tailwind.config.js
  - postcss.config.js
  
  # Hidden files
  - .*

