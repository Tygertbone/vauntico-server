# Vauntico Trust Score - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/vauntico_db

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-here

# CRON Secret Configuration
CRON_SECRET=your-cron-secret-key-here

# OAuth Encryption (Optional)
OAUTH_ENCRYPTION_KEY=your-oauth-encryption-key-here
OAUTH_ENCRYPTION_SALT=your-oauth-encryption-salt-here

# Redis Configuration (Upstash)
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-token-here

# Application Configuration
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Email Service (Resend.com)
RESEND_API_KEY=re_your-resend-api-key-here

# Payment Processing Configuration
# Paystack (Primary Processor)
PAYSTACK_SECRET_KEY=sk_test_your-paystack-secret-key-here
PAYSTACK_PUBLIC_KEY=pk_test_your-paystack-public-key-here
PAYSTACK_CREATOR_PASS_PLAN_CODE=PLN_your-creator-pass-plan-code
PAYSTACK_ENTERPRISE_PLAN_CODE=PLN_your-enterprise-plan-code

# Stripe Payment Processing (Optional)
STRIPE_ENABLED=false
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret-here
STRIPE_CREATOR_PASS_PRICE_ID=price_your-creator-pass-price-id
STRIPE_ENTERPRISE_PRICE_ID=price_your-enterprise-price-id

# Google OAuth (for Analytics/YouTube)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn-here

# Slack Alerting
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your-slack-webhook

# Logging Configuration
LOG_LEVEL=info

# Security Configuration
SESSION_SECRET=your-session-secret-key-here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# OCI Instance Configuration (for production deployment)
INSTANCE_PRIVATE_IP=10.0.1.100
INSTANCE_PUBLIC_IP=your-instance-public-ip

# Admin Access Key
ADMIN_ACCESS_KEY=your-admin-access-key-here

# Emergency Revenue Features
ENABLE_PAYMENT_BRIDGE=true
ENABLE_VERIFICATION=true
ENABLE_CONTENT_RECOVERY=true
PAYMENT_BRIDGE_FEE_PERCENTAGE=10
VERIFICATION_BRAND_PRICE=99
CONTENT_RECOVERY_FEE_PERCENTAGE=30

# Anthropic AI (for trust score calculations)
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-key-here

# GitHub Actions Secrets (for CI/CD)
BACKEND_URL=https://your-backend-url.com