{
  "name": "vauntico-trust-score-backend",
  "version": "2.0.0",
  "description": "Enterprise-ready trust score dashboard backend with enhanced features, validation, and monitoring",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx -r dotenv/config_path=.env.development --watch src/server.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch --detectOpenHandles",
    "migrate": "psql \"$DATABASE_URL\" -f migrations/001_create_schema.sql",
    "lint": "eslint src --max-warnings 0",
    "lint:fix": "eslint src --fix",
    "validate": "tsc --noEmit",
    "health": "curl -f http://localhost:3000/api/health",
    "test:unit": "jest --testPathPattern=src --verbose --coverage",
    "test:integration": "jest --testPathPattern=src/tests --verbose --coverage"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.9.1",
    "@cloudflare/workers-types": "^4.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.3",
    "jest": "^29.7.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.344.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "pg": "^8.11.5",
    "prom-client": "^9.4.3",
    "prometheus-client": "^15.1.0",
    "stripe": "^20.0.0",
    "zod": "^3.22.4",
    "typescript": "^5.2.2",
    "winston": "^3.11.0",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/express-serve-static": "^1.15.2",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.0.0",
    "@types/node-cron": "^2.0.6",
    "@types/pg": "^8.11.5",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "tsx": "^4.5.2",
    "ts-jest": "^29.2.3",
    "ts-node": "^20.12.2",
    "redoc-cli": "^0.13.21"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vauntico/trust-score-backend.git"
  },
  "keywords": [
    "trust-score",
    "dashboard",
    "analytics",
    "api",
    "monitoring",
    "enterprise",
    "typescript",
    "express",
    "rest",
    "creator",
    "validation",
    "metrics",
    "notifications",
    "subscriptions",
    "features",
    "trends",
    "cors",
    "rate-limiting",
    "prometheus",
    "winston",
    "zod",
    "security",
    "authentication",
    "authorization",
    "health-checks",
    "prometheus-metrics",
    "compliance",
    "audit-logging",
    "error-handling",
    "swagger",
    "openapi",
    "microservices",
    "postgres",
    "redis",
    "elasticsearch",
    "monitoring-alerts",
    "performance",
    "real-time",
    "sustainable",
    "scalable",
    "docker",
    "kubernetes",
    "api-gateway",
    "load-balancer",
    "webpack",
    "jest",
    "testing",
    "coverage",
    "security-scanning",
    "sonarqube",
    "observability",
    "devops",
    "infrastructure",
    "backend"
  ],
  "author": "Vauntico Team <team@vauntico.com>",
  "license": "MIT",
  "config": {
    "strict": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": [
      ".ts"
    ],
    "jsx": "react-jsx",
    "outDir": "dist",
    "rootDir": "./src",
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/types/*": [
        "./node_modules/@types/*"
      ]
    }
  }
}
