# Vauntico Trust Score Backend - FREE Stack Configuration
# Copy this to .env and fill in your actual values

# Database Configuration (Neon.tech PostgreSQL Free Tier)
DATABASE_URL=postgresql://[username]:[password]@[host]/neondb?sslmode=require

# JWT Configuration (Generate random secrets for production)
JWT_SECRET=your-jwt-secret-change-in-production-32-chars-min
JWT_REFRESH_SECRET=your-jwt-refresh-secret-change-in-production-32-chars-min
CRON_SECRET=your-cron-secret-for-github-actions

# Redis Configuration (Upstash Redis Free Tier)
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# OAuth Encryption (Optional - for storing OAuth tokens securely)
OAUTH_ENCRYPTION_KEY=fallback-oauth-key-change-in-production
OAUTH_ENCRYPTION_SALT=oauthtrustscore

# Application Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# Email Service (Resend.com Free Tier)
RESEND_API_KEY=re_your-resend-api-key

# Anthropic AI (Free $5 Credit)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Google OAuth (for Google Analytics/YouTube)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Sentry Error Tracking (Free Tier - 5K errors/month)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Slack Alerting (for production monitoring)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Payment Processing Configuration
# Paystack is PRIMARY processor (enabled by default)
PAYSTACK_SECRET_KEY=sk_test_your-paystack-secret-key
PAYSTACK_PUBLIC_KEY=pk_test_your-paystack-public-key
PAYSTACK_CREATOR_PASS_PLAN_CODE=PLN_creator_pass_your_plan_code
PAYSTACK_ENTERPRISE_PLAN_CODE=PLN_enterprise_your_plan_code

# Stripe Payment Processing (scaffolded but disabled by default)
# Set STRIPE_ENABLED=true to enable Stripe processing
STRIPE_ENABLED=false
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_CREATOR_PASS_PRICE_ID=price_your-creator-pass-price-id
STRIPE_ENTERPRISE_PRICE_ID=price_your-enterprise-price-id

# Logging Configuration
LOG_LEVEL=info

# Additional Security (Optional)
# SESSION_SECRET=your-session-secret-for-additional-security
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# Admin Access Key (for admin endpoints - generate random secret)
ADMIN_ACCESS_KEY=your-admin-access-key-generate-random-32-chars

# GitHub Actions Secrets (stored in GitHub repo settings)
# BACKEND_URL=https://your-render-app.onrender.com
# CRON_SECRET=(same as above CRON_SECRET)
